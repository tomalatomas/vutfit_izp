void vypisVstupCharaktery(){
	printf("Načtěte charakter\n");
	int charakter=getchar();
	while(charakter!=EOF){
		if(charakter!=10){
			printf("%d %c\n",charakter,charakter);
		}
		charakter = getchar();
	}
}

